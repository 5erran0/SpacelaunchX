<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/filter_launch_success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launch_success"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/filter_launch_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/filter_launch_success_title"
        app:layout_constraintEnd_toEndOf="@id/filter"
        app:layout_constraintStart_toEndOf="@id/filter_launch_success_title"
        app:layout_constraintTop_toTopOf="@id/filter_launch_success_title" />

    <TextView
        android:id="@+id/filter_launch_year_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/launch_year"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_launch_success_title" />

    <Spinner
        android:id="@+id/filter_launch_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/filter_launch_year_title"
        app:layout_constraintEnd_toEndOf="@id/filter"
        app:layout_constraintStart_toEndOf="@id/filter_launch_year_title"
        app:layout_constraintTop_toTopOf="@id/filter_launch_year_title" />

    <TextView
        android:id="@+id/filter_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/order"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_launch_year_title" />

    <Spinner
        android:id="@+id/filter_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/filter_order_title"
        app:layout_constraintEnd_toEndOf="@id/filter"
        app:layout_constraintStart_toEndOf="@id/filter_order_title"
        app:layout_constraintTop_toTopOf="@id/filter_order_title" />

    <TextView
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:text="@string/clear"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/filter"
        app:layout_constraintTop_toBottomOf="@id/filter_order" />

    <TextView
        android:id="@+id/filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/filter"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_order" />

</androidx.constraintlayout.widget.ConstraintLayout>